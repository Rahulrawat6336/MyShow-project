<link href="/stylesheets/style.css" rel="stylesheet">

<html>
    <form action="/movie/movie_submit" method="post" enctype="multipart/form-data">

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:wght@200&family=Lato:wght@300&family=Poppins:ital,wght@1,200&family=Roboto+Slab:wght@200&family=Young+Serif&display=swap"
        rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>


<div class="maincontainer">
    <div class="box">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 headstyle" style="font-size: 35px;align-items: center;font-weight: bolder;">
                    <span><img src="/images/movie.png" width="60px"></span>
                    <span>Movie ticket</span>
                    <span style="margin-left: auto;"><a href="/movie/displayallmovie"><img src="/images/List.png" width="45"></a></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <hr width="680px">
                </div>
            </div>
            <div class="row headstyle" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <select class="form-select" id="stateid" name="stateid">
                        <option selected>-select states-</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <select class="form-select" id="cityid" name="cityid">
                        <option selected>-select city-</option>
                    </select>
                </div>
            </div>
            <div class="row headstyle" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <select class="form-select" id="cinemaid" name="cinemaid">
                        <option selected>-select cinema-</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <select class="form-select" id="screenid" name="screenid">
                        <option selected>-select screens-</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 headstyle" style="margin-top: 8px;">
                    <input type="text" placeholder="moviename" class="form-control" id="moviename" name="moviename">
                </div>
            </div>
            <div class="row ">
                <div class="col-sm-12 " class="headstyle" style="margin-top: 8px;">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Description" id="description"
                            name="description"></textarea>
                        <label for="floatingTextarea">Description</label>
                    </div>
                </div>
            </div>
            <div class="row headstyle" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <input type="date" class="form-control" style="text-decoration: none;" placeholder="Release date" name="releasedate"
                        id="releasedate">
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="ticket price" id="ticketprice"
                        name="ticketprice">
                </div>
            </div>

            <div class="row headstyle" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <input type="text" name="actorname" placeholder="actor" id="actorname" class="form-control">
                </div>
                <div class="col-sm-6">
                    <input type="text" name="actressname" placeholder="actress" id="actressname"  class="form-control">
                </div>
            </div>
            <div class="row " style="margin-top: 8px;">
                <div class="col-sm-12">
                    <span>Status:</span>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="status" id="status" value="2D">
                        <label class="form-check-label" for="status">2D</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox"name="status" id="status" value="3D">
                        <label class="form-check-label" for="status">3D</label>
                    </div>

                </div>
            </div>
            <div class="row" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <input type="file" class="form-control" id="picture" name="picture">
                </div>
                <div class="col-sm-6"
                    style="align-items: end;justify-content: center;flex-direction: row;display: flex;">
                    <img src="/images/1.png" width="35px" id="moviepicture"/>
                </div>
            </div>
            <div class="row headstyle" style="margin-top: 8px;">
                <div class="col-sm-6">
                    <input type="submit" class="btn btn-primary" style="width: 340px;">
                </div>
                <div class="col-sm-6">
                    <input type="reset" class="btn btn-primary" style="width: 340px;">
                </div>
            </div>
            <div class="row">
            <div class="col-sm-12 headstyle"  style="justify-content: center; align-items: center;font-size: 12px;">
                <% if(status==1){ %>
                <h2 style="color: green ;">Movies submitted  successfully</h2> <% }
                else if(status==2){ %>
                <h2 style="color: red;"> Something went wrong</h2> <% } %>
            </div>
            </div>

        </div>
    </div>
</div>
</form>

</html>